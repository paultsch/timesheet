<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label "Grade" %><br />
    <%= collection_select(:user, :grade_id, Grade.all, :id, :grade_level) %>
  </div>

  <div class="field">
    <%= f.label "User Type" %><br />
    <%= collection_select(:user, :usertype_id, Usertype.all, :id, :user_type) %>
  </div>

  <div class="field">
    <%= f.label "Supervisor" %><br />
    <%= collection_select(:user, :supervisor_id, User.where(usertype_id: 2), :id, :full_name, prompt: true) %>
  </div>

  <div class="actions">
    <%= f.submit "Create User" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
