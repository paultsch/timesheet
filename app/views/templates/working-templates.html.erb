<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Date</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <th scope="row"><%= schedule.id %></th>
        <td><%= schedule.date  %></td>
        <td><%= link_to "Delete", '#', class: "btn btn-sm btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= month_calendar event: @schedules do |date, schedules| %>
  <%= date.day %>
  <% @schedules.each do |schedule| %>
    <% if schedule.date == date %>
      <%= link_to "Delete", '#', class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %>

    <% end %>
  <% end %>
<% end %>

<%= month_calendar event: @schedules do |date, schedules| %>
  <%= date.day %>
  <% @schedules.each do |schedule| %>
    <% if schedule.date != date %>
      <div class="text-center">
        <%= link_to "Add", '#', class: "btn btn-success btn-sm" %>
      </div>
    <% end %>
    <% if schedule.date == date %>
      <div class="text-center">
        <%= link_to "Delete", '#', class: "btn btn-sm btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %>
      </div>
    <% end %>
  <% end %>
<% end %>

<%= month_calendar do |date| %>
  <%= date.day %>
  <% if @schedules.include?(date) %>
    <div class="text-center">
      <%= link_to "Add", '#', class: "btn btn-sm btn-success", method: :delete, data: {confirm: 'Are you sure?'} %>
    </div>
  <% end %>
<% end %>
