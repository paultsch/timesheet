<div class="jumbotron">
  <h1 class="text-center">Students</h1>
  <hr class="my-4">
  <%= link_to "Add New Student", new_user_path, class: "btn btn-primary" %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Grade</th>
      <th scope="col">Email</th>
      <th scope="col">Supervisor</th>
      <th scope="col" class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <th scope="row"><%= student.id %></th>
        <td><%= link_to student.full_name, user_path(student) %></td>
        <td><%= student.grade.grade_level %></td>
        <td><%= student.email %></td>
        <td><%= link_to student.supervisor.full_name, user_path(student.supervisor.id) unless student.supervisor == nil %></td>
        <td><%= link_to "Edit", edit_user_path(student.id), class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to "Delete", user_path(student.id), class: "btn btn-sm btn-danger", method: :delete, data: {confirm: 'Are you sure you want to delete this student? This will delete the student and all of her timesheets?'}%></td>
      </tr>
    <% end %>
  </tbody>
</table>
